<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.Styled.ActionBar" parent="Widget.AppCompat.Light.ActionBar"></style>


    <style name="dialog_theme" parent="Theme.AppCompat.Light">

    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@drawable/shinkaya</item>
    </style>
